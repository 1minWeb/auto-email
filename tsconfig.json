{
  "compilerOptions": {
    "target": "ESNext", // Target latest JavaScript features
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Include DOM and ESNext libraries
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking for third-party libraries
    "strict": true, // Enable strict type checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "noEmit": true, // Do not emit compiled files (handled by Next.js)
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "module": "ESNext", // Use the latest ECMAScript module syntax
    "moduleResolution": "Node", // Use Node.js-style module resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Isolate modules to avoid global scope conflicts
    "jsx": "preserve", // Preserve JSX syntax for Next.js
    "incremental": true // Enable incremental compilation for faster builds
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ], // Files to include
  "exclude": [
    "node_modules"
  ] // Exclude third-party modules
}
